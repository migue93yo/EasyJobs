<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".companyView.SettingCompanyFragment">


    <TextView
        android:id="@+id/setting_company_notification"
        android:text="@string/receibe_notifications"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textSize="16sp"
        android:gravity="center" />

    <Switch
        android:id="@+id/setting_company_notification_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/setting_company_notification"
        android:layout_alignTop="@id/setting_company_notification" />

    <View
        android:id="@+id/setting_company_separator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cfcfcfcf"
        android:layout_below="@+id/setting_company_notification" />

    <TextView
        android:id="@+id/setting_company_session_close"
        android:text="@string/close_session"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/setting_company_separator1"
        android:gravity="center_vertical"
        android:textSize="16sp" />

    <View
        android:id="@+id/setting_company_separator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cfcfcfcf"
        android:layout_below="@+id/setting_company_session_close" />

</RelativeLayout>
